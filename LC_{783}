/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:
    int min(int a,int b,int c=100000,int d=100000){
        if(a<=b&&a<=c&&a<=d) return a;
        if(b<=a&&b<=c&&b<=d) return b;
        if(c<=b&&c<=a&&c<=d) return c;
        return d;
    }
    bool isleaf(TreeNode* root){
        return root->left==nullptr&&root->right==nullptr;
    }
    int MAXIMUM(TreeNode* root){
        // assuming non null ptr is given
        while(root->right!=nullptr){
            root=root->right;
        }
        return root->val;
    }
    int MINIMUM(TreeNode* root){
        // assuming non null ptr is given
        while(root->left!=nullptr){
            root=root->left;
        }
        return root->val;
    }
    int minDiffInBST(TreeNode* root) {
        if(root->left==nullptr){
            //then acc to my convention it must have right child
            if(isleaf(root->right)) return abs(root->val-root->right->val);//need not to be changed
            int b=abs(root->val-MINIMUM(root->right));//changed it correctly
            int c=minDiffInBST(root->right);
            return min(b,c);
        }
        if(root->right==nullptr){
            //then acc to my convention it must have left child
            if(isleaf(root->left)) return abs(root->val-root->left->val);//need no to be changed
            int b=abs(root->val-MAXIMUM(root->left));
            int c=minDiffInBST(root->left);
            return min(b,c);
        }
        if(isleaf(root->left)&&isleaf(root->right)){
            int a=abs(root->val-root->left->val);//these two need not to be changed
            int b=abs(root->val-root->right->val);
            return min(a,b);
        }
        if(isleaf(root->left)){
            int a=abs(root->val-root->left->val);//need not to be changed
            int b=abs(root->val-MINIMUM(root->right));
            int c=minDiffInBST(root->right);
            return min(a,b,c);
        }
        if(isleaf(root->right)){
            int a=abs(root->val-MAXIMUM(root->left));
            int b=abs(root->val-root->right->val);//need not to be changed
            int c=minDiffInBST(root->left);
            return min(a,b,c);
        }
        int a=abs(root->val-MAXIMUM(root->left));
        int b=abs(root->val-MINIMUM(root->right));
        int c=minDiffInBST(root->left);
        int d=minDiffInBST(root->right);
        return min(a,b,c,d);
    }
};
